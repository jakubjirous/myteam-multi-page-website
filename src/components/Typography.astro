---
type Variant = "h1" | "h2" | "h3" | "body1" | "body2" | "small";

const tags: Record<Variant, string> = {
	h1: "h1",
	h2: "h2",
	h3: "h3",
	body1: "p",
	body2: "p",
	small: "span"
};

const sizes: Record<Variant, string> = {
	h1: "font-livvic text-40 font-bold text-center tablet:text-64 desktop:text-100",
	h2: "font-livvic text-32 font-bold text-center tablet:text-32 desktop:text-48",
	h3: "font-livvic text-18 font-bold text-center",
	body1: "font-livvic text-18 font-semibold text-left",
	body2: "font-livvic text-15 font-semibold text-left",
	small: "font-livvic text-13 font-medium text-left italic"
};

interface Props {
	variant: Variant;
	className?: string;
	as?: string;
}

const { variant = "primary", className, as } = Astro.props;

const sizeClasses = sizes[variant];
const Tag = as || tags[variant];
---

<Tag class:list={[sizeClasses, className]}>
	<slot />
</Tag>
