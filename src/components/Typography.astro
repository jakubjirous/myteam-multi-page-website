---
import { ElementType } from "react";

type Variant = "h1" | "h2" | "h3" | "body1" | "body2" | "small";

const tags: Record<Variant, ElementType> = {
	h1: "h1",
	h2: "h2",
	h3: "h3",
	body1: "p",
	body2: "p",
	small: "span",
};

const sizes: Record<Variant, string> = {
	h1: "text-40 font-bold text-center text-white tablet:text-64 desktop:text-100",
	h2: "text-32 font-bold text-center text-white tablet:text-32 desktop:text-48",
	h3: "text-18 font-bold text-center text-white",
	body1: "text-18 font-semibold text-left text-white",
	body2: "text-15 font-semibold text-left text-white",
	small: "text-13 font-medium text-left italic text-white",
};

interface Props {
	variant: Variant;
	className?: string;
	as?: ElementType;
}

const { variant = "primary", className, as } = Astro.props;

const sizeClasses = sizes[variant];
const Tag = as || tags[variant];
---

<Tag className={`${sizeClasses} ${className}`}>
	<slot />
</Tag>;
