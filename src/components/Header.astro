---
import { Image } from "@astrojs/image/components";
import pattern from "../assets/bg-pattern-about-1-mobile-nav-1.svg";
import logo from "../assets/logo.svg";
import MyButton from "./MyButton.astro";
import NavLink from "./NavLink.astro";
---
<header>
	<div
		class="container mx-auto flex flex-row justify-between items-center min-h-[7.5rem] gap-12 px-10 desktop:gap-20 desktop:px-6">
		<div class="flex-initial min-w-[6rem]">
			<a href="/">
				<Image
					src={logo}
					alt="MyTeam"
					width={95}
					height={24}
					class="desktop:hidden"
				/>
				<Image
					src={logo}
					alt="MyTeam"
					width={160}
					height={40}
					class="hidden desktop:inline-flex"
				/>
			</a>
		</div>

		<nav class="hidden tablet:flex flex-row items-center justify-between w-full">
			<ul class="flex flex-row gap-10">
				<li>
					<NavLink href="/">Home</NavLink>
				</li>
				<li>
					<NavLink href="/about">About</NavLink>
				</li>
			</ul>
			<ul>
				<li>
					<MyButton variant="primary-light" href="/contact">Contact us</MyButton>
				</li>
			</ul>
		</nav>

		<!-- open mobile drawer -->
		<button
			type="button" data-drawer-target="mobile-drawer" data-drawer-show="mobile-drawer"
			data-drawer-placement="right" aria-controls="mobile-drawer"
			class="text-white hover:text-flory tablet:hidden ease-in-out duration-300">

			<svg xmlns="http://www.w3.org/2000/svg" width="20" height="17">
				<g fill="currentColor" fill-rule="evenodd">
					<path d="M0 0h20v3H0zM0 7h20v3H0zM0 14h20v3H0z" />
				</g>
			</svg>
		</button>

		<!-- mobile drawer -->
		<div id="mobile-drawer"
				 class="bg-casul px-12 py-28 w-80 fixed top-0 right-0 z-40 h-screen overflow-y-auto transition-transform translate-x-full duration-300 overflow-x-hidden"
				 tabindex="-1">

			<button type="button" data-drawer-hide="mobile-drawer" aria-controls="mobile-drawer"
							class="absolute top-14 right-6 text-white hover:text-flory ease-in-out duration-300">
				<svg xmlns="http://www.w3.org/2000/svg" width="18" height="17">
					<path fill="currentColor" fill-rule="evenodd"
								d="M15.01.368l2.122 2.122-6.01 6.01 6.01 6.01-2.122 2.122L9 10.622l-6.01 6.01L.868 14.51 6.88 8.5.87 2.49 2.988.368 9 6.38 15.01.37z" />
				</svg>
				<span class="sr-only">Close menu</span>
			</button>

			<nav>
				<ul class="flex flex-col gap-6">
					<li>
						<NavLink href="/" className="text-18">Home</NavLink>
					</li>
					<li>
						<NavLink href="/about" className="text-18">About</NavLink>
					</li>
					<li class="mt-3">
						<MyButton variant="primary-light" href="/contact">Contact us</MyButton>
					</li>
				</ul>
			</nav>

			<Image src={pattern} alt="Background pattern" width={200} height={200}
						 class="absolute z-0 bottom-0 -right-[6.25rem]" />
		</div>
	</div>
</header>
